<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="App2.Views.InstrumentDetailPage" Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="remove instrument" Clicked="Remove_Clicked" />
    </ContentPage.ToolbarItems>
    <!--<ScrollView x:Name="Scrolable">-->
    <StackLayout Spacing="20" Padding="5">
        <StackLayout Spacing="20" Padding="5">
            <Label Text="{Binding InstrumentDetail.Adress}" FontSize="Small"/>
            <Label Text="{Binding InstrumentDetail.Login}" FontSize="Small"/>
            <!-- <Label Text="{Binding InstrumentDetail.Password}" FontSize="Small"/>-->
        </StackLayout>
        <StackLayout Spacing="10" Padding="5" HorizontalOptions="FillAndExpand" x:Name="botches">            <!-- container for batches -->

        </StackLayout>
    </StackLayout>
    <!--</ScrollView>-->
</ContentPage>