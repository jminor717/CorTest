<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="App2.Views.NewInstrumentPage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="15">
                <Entry Text="{Binding instrument.Name}" FontSize="Small" Placeholder ="Display Name"/>
                <Entry Text="{Binding instrument.Adress}" FontSize="Small" Margin="0" Placeholder="Adress"/>
                <Entry Text="{Binding instrument.Login}" FontSize="Small" Margin="0" Placeholder="User Name"/>
                <Entry Text="{Binding instrument.Password}" FontSize="Small" Margin="0" IsPassword="true"  Placeholder="password" />
            </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</ContentPage>
